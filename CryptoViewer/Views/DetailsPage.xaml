<Page x:Class="CryptoViewer.Views.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CryptoViewer.ViewModels"
      xmlns:oxy="http://oxyplot.org/wpf"
      Title="DetailsPage" Background="{DynamicResource BackgroundBrush}">

    <Page.DataContext>
        <vm:DetailsViewModel />
    </Page.DataContext>

    <StackPanel Background="{DynamicResource BackgroundBrush}" Margin="20">
        <Button Content="{DynamicResource BackButton}"
            Width="100"
            Margin="0,0,0,10"
            Click="BackButton_Click"
            Background="{DynamicResource ForegroundBrush}"
            Foreground="{DynamicResource BackgroundBrush}"/>

        <TextBlock Text="{DynamicResource DetailsTitle}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource ForegroundBrush}"/>

        <TextBlock Text="{Binding SelectedCurrency.Name}" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ForegroundBrush}"/>

        <TextBlock Text="{Binding SelectedCurrency.Symbol}" 
                   FontSize="14" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource ForegroundBrush}"/>

        <TextBlock Text="{DynamicResource PriceLabel}" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource PriceTextBrush}"/>

        <TextBlock Text="{Binding SelectedCurrency.PriceUsd, StringFormat={}{0:F2}}" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource PriceTextBrush}"/>

        <TextBlock Text="{DynamicResource ChangeLabel}" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource ChangeTextBrush}"/>

        <TextBlock Text="{Binding SelectedCurrency.ChangePercent24Hr, StringFormat={}{0:F2}%}" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource ChangeTextBrush}"/>

        <TextBlock Text="{DynamicResource VolumeLabel}" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource VolumeTextBrush}"/>

        <TextBlock Text="{Binding SelectedCurrency.VolumeUsd24Hr, StringFormat={}{0:F2}}" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource VolumeTextBrush}"/>

        <oxy:PlotView x:Name="plotView"
                      Height="300"
                      Margin="0,20,0,20"
                      Background="Transparent"
                      />
    </StackPanel>
</Page>