<Page x:Class="CryptoViewer.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CryptoViewer.ViewModels"
      xmlns:local="clr-namespace:CryptoViewer.Localization"
      Title="HomePage" Background="{DynamicResource BackgroundBrush}">

    <Page.DataContext>
        <vm:HomeViewModel />
    </Page.DataContext>

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <StackPanel>

            <Button Content="{local:Loc ToggleTheme}"
                    Click="OnToggleThemeClick"
                    HorizontalAlignment="Right"
                    Width="150"
                    Margin="0,0,0,10"/>

            <TextBlock Text="{local:Loc SelectLanguageLabel}" 
                    FontSize="14"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,5"
                    Foreground="{DynamicResource ForegroundBrush}"/>
            
            <ComboBox Name="LanguageSelector"
                      Width="150"
                      HorizontalAlignment="Right"
                      SelectionChanged="OnLanguageChanged"
                      Margin="0,0,0,10"
                      SelectedIndex="-1"
                      Text="{local:Loc SelectLanguageLabel}">
                <ComboBoxItem Content="English" Tag="en" />
                <ComboBoxItem Content="Українська" Tag="uk" />
                <ComboBoxItem Content="Polski" Tag="pl" />
                <ComboBoxItem Content="Français" Tag="fr" />
                <ComboBoxItem Content="Deutsch" Tag="de" />
            </ComboBox>

            <TextBlock Text="{local:Loc SearchLabel}"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource ForegroundBrush}"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="30"
                         Margin="0,0,10,0"
                         FontSize="14" />
            </StackPanel>

            <ListView ItemsSource="{Binding FilteredCryptocurrencies}"
                      SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
                      SelectionChanged="CurrencySelected"
                      Background="{DynamicResource BackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Symbol}" FontSize="14"/>
                            <TextBlock Text="{Binding PriceUsd, StringFormat={}{0:C2}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Margin="10">
                <TextBlock Text="{Binding SelectedCurrency.Name}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedCurrency.Symbol}" FontSize="16"/>
                <TextBlock Text="{Binding SelectedCurrency.PriceUsd, StringFormat={}{0:C2}}" />
                <TextBlock Text="{Binding SelectedCurrency.ChangePercent24Hr, StringFormat={}{0:F2}%}" />
                <TextBlock Text="{Binding SelectedCurrency.VolumeUsd24Hr, StringFormat={}{0:C2}}" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
